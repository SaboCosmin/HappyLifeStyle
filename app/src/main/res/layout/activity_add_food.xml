<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".AddFoodActivity">


    <TextView
        android:id="@+id/pageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food name: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name_input"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food description: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="description_input"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/caloriesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food calories: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/calories_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="calories_input"
                android:inputType="number"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/proteinsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food proteins: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/proteins_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="proteins_input"
                android:inputType="number"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carbsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food carbs: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/carbs_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="carbs_input"
                android:inputType="number"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sugarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food sugar: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/sugar_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="sugar_input"
                android:inputType="number"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fiberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food fiber: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/fiber_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="fiber_input"
                android:inputType="number"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food fat: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/fat_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="fat_input"
                android:inputType="number"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food price: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/price_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="price_input"
                android:inputType="number"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food time: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/timeToPrepare_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="timeToPrepare_input"
                android:inputType="number"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/upload_food_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:height="20dp"
            android:background="@drawable/box_button"
            android:gravity="center"
            android:onClick="uploadFood"
            android:text="Upload Food"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>