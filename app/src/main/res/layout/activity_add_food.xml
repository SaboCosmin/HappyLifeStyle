<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".Activities.AddFoodActivity">


    <TextView
        android:id="@+id/pageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food name: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name_input"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food description: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="description_input"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/caloriesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food calories: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/calories_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="calories_input"
                android:inputType="numberDecimal"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/proteinsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food proteins: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/proteins_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="numberDecimal"
                android:inputType="numberDecimal"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carbsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food carbohydrate: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/carbs_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="carbs_input"
                android:inputType="numberDecimal"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sugarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food sugar: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/sugar_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="sugar_input"
                android:inputType="numberDecimal"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fiberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food fiber: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/fiber_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="fiber_input"
                android:inputType="numberDecimal"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food fat: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/fat_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="fat_input"
                android:inputType="numberDecimal"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/minTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min weight: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/min_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="minWeight_input"
                android:inputType="number"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maxTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max weight: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/max_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="maxWeight_input"
                android:inputType="number"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/activity_level_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goesWithView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goes with: "
                android:textColor="#000000"
                android:textSize="25sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBoxSnack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="snack" />

                <CheckBox
                    android:id="@+id/checkBoxEgg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="egg" />

                <CheckBox
                    android:id="@+id/checkBoxDairy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="dairy" />

                <CheckBox
                    android:id="@+id/checkBoxCereal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="cereal" />

                <CheckBox
                    android:id="@+id/checkBoxFastFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="fastFood" />

                <CheckBox
                    android:id="@+id/checkBoxFish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="fish" />

                <CheckBox
                    android:id="@+id/checkBoxSeafood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="seafood" />

                <CheckBox
                    android:id="@+id/checkBoxVegetable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="vegetable" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBoxFruit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="fruit" />

                <CheckBox
                    android:id="@+id/checkBoxMeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="meat" />

                <CheckBox
                    android:id="@+id/checkBoxNuts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="nuts" />

                <CheckBox
                    android:id="@+id/checkBoxPasta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="pasta" />

                <CheckBox
                    android:id="@+id/checkBoxRice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="rice" />

                <CheckBox
                    android:id="@+id/checkBoxSoup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="soup" />

                <CheckBox
                    android:id="@+id/checkBoxSalad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="salad" />

                <CheckBox
                    android:id="@+id/checkBoxDesert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:text="desert" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <Button
            android:id="@+id/upload_food_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box_button"
            android:layout_marginBottom="5dp"
            android:gravity="bottom"
            android:onClick="uploadFood"
            android:text="Upload Food"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>